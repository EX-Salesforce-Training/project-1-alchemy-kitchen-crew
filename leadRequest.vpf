<apex:page showHeader="false" sidebar="false" standardStylesheets="true"
           standardController="Lead" extensions="leadController" applyHTmlTag="false">
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
        <head>
            <apex:slds />
        </head>
        <body class="slds-scope">
            
            
            <apex:form >
                <div class="slds-grid slds-wrap">
                    <div class="slds-p-horizontal--small slds-size--1-of-1 slds-m-top--large">
                        <h3 class="slds-text-heading--small slds-m-bottom--medium">Lead Information</h3>
                    </div>
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label">First Name</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Lead.FirstName}"/>
                            </div>
                        </div>
                    </div>
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label"><abbr class="slds-required" title="required">*</abbr>Last Name</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Lead.LastName}"/>
                            </div>
                            
                            
                        </div>
                    </div>
                     <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label"><abbr class="slds-required" title="required">*</abbr>Postal Code</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Lead.LastName}"/>
                            </div>
                            
                            
                        </div>
                    </div>
                    
                       <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label"><abbr class="slds-required" title="required">*</abbr>Phone</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Lead.LastName}"/>
                            </div>
                            
                            
                        </div>
                    </div>
                    
                      <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label"><abbr class="slds-required" title="required">*</abbr>Email</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Lead.LastName}"/>
                            </div>
                            
                            
                        </div>
                    </div>
                    
                    
              <div class="slds-p-horizontal--small slds-size--1-of-2">
                <div class="slds-form-element">
 					
 				    <div class="slds-form-element">
  			    	<label class="slds-form-element__label">Select Dealership</label>
  			 	    <div class="slds-form-element__control">
   			        <div class="slds-select_container">
                    <apex:selectList size="1" value="{!selectedDealership}" styleClass="slds-select">
                <apex:selectOptions value="{!DealershipList}" />
            </apex:selectList>
    	    </div>
  	  </div>
			</div>
					</div>
                    </div>
                    
                    
                    
                          <div class="slds-p-horizontal--small slds-size--1-of-2">
                <div class="slds-form-element">
 					
 				    <div class="slds-form-element">
  			    	<label class="slds-form-element__label">Select Model</label>
  			 	    <div class="slds-form-element__control">
   			        <div class="slds-select_container">
                    <apex:selectList size="1" value="{!selectedDealership}" styleClass="slds-select">
                <apex:selectOptions value="{!items}" />
            </apex:selectList>
    	    </div>
  	  </div>
			</div>
					</div>
                    </div>
                    
                    
                    
                    
                    <div class="slds-p-horizontal--small slds-m-top--medium slds-size--1-of-1 slds-align--absolute-center">

                        <apex:commandButton styleClass="slds-button slds-button--brand" value="Submit" action="{!save}" />
                    </div>
                </div>
            </apex:form>
        </body>
    </html>
</apex:page>
